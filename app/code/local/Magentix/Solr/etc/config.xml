<config>
    <modules>
        <Magentix_Solr>
            <version>1.1.4</version>
        </Magentix_Solr>
    </modules>
    <global>
        <models>
            <solr>
                <class>Magentix_Solr_Model</class>
            </solr>
            <catalogsearch_resource>
                <rewrite>
                    <fulltext>Magentix_Solr_Model_CatalogSearch_Resource_Fulltext</fulltext>
                </rewrite>
            </catalogsearch_resource>
        </models>
        <helpers>
            <solr>
                <class>Magentix_Solr_Helper</class>
            </solr>
        </helpers>
        <blocks>
            <solr>
                <class>Magentix_Solr_Block</class>
            </solr>
        </blocks>
        <resources>
            <solr_catalog_setup>
                <setup>
                    <module>Magentix_Solr</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </solr_catalog_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Magentix_Solr before="Mage_Adminhtml">Magentix_Solr_Adminhtml</Magentix_Solr>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <solr>
            <active>
                <frontend>0</frontend>
                <admin>0</admin>
            </active>
            <server>
                <host></host>
                <port></port>
                <path>/solr</path>
            </server>
            <search>
                <limit>100</limit>
            </search>
        </solr>
    </default>
</config>